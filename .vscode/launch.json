  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      // "program": "${workspaceFolder}",
      "args": ["-o", "output.log"]
    },
    {
      "name": "Launch Package (workspace.dir)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": ["-o", "output.log"]
    },
    {
      "name": "Launch 'examples/blueprint wrong'",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/examples/blueprint/",
      "args": ["wrong"],
      "env": { "HELP": "0", "APP_DEBUG": "1", "APP_VERBOSE": "1" }
    },
    {
      "name": "Launch 'examples/blueprint snd hedzr'",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/examples/blueprint/",
      "args": ["snd", "hedzr"]
    },
    {
      "name": "Launch 'examples/blueprint help'",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/examples/blueprint/",
      "args": ["help"]
    },
    {
      "name": "> Launch examples/tiny/lite/ help ...",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "buildFlags": "-tags='delve verbose'",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/examples/tiny/lite/",
      "args": ["help"]
    },

    {
      "name": "Attach to a running process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0
    },
    {
      "name": "> Launch file",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}"
    },
    {
      "name": "> Launch dir",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "env": {},
      "args": []
    },
    {
      "name": "> Launch test package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}"
    }
  ]
}
